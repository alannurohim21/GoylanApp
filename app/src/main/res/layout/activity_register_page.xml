<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.RegisterPage"
    android:paddingHorizontal="25.25dp"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/gambar1"
      android:layout_gravity="center"
      android:layout_marginTop="27.26dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="22sp"

      android:layout_marginTop="28.37dp"
      android:text="Register"
      android:layout_gravity="center"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="17sp"

      android:layout_marginTop="19.64dp"
      android:text="Email"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:background="@drawable/bg_edittext"

      android:hint="Email"
      android:minHeight="48dp"
      android:padding="11.13dp"
      android:textSize="17sp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="17sp"

      android:layout_marginTop="19.64dp"
      android:text="Handphone"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:background="@drawable/bg_edittext"

      android:hint="Handphone"
      android:minHeight="48dp"
      android:padding="11.13dp"
      android:textSize="17sp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="17sp"

      android:layout_marginTop="18.17dp"
      android:text="Password"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:background="@drawable/bg_edittext"
      android:drawableEnd="@drawable/ic_visibility"
      android:inputType="textPassword"
      android:hint="Password"
      android:minHeight="48dp"
      android:padding="11.13dp"
      android:paddingEnd="17dp"
      android:textSize="17sp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="17sp"

      android:layout_marginTop="18.17dp"
      android:text="Confirm password"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:background="@drawable/bg_edittext"
      android:drawableEnd="@drawable/ic_visibility"
      android:inputType="textPassword"
      android:hint="Confirm password"
      android:minHeight="48dp"
      android:padding="11.13dp"
      android:paddingEnd="17dp"
      android:textSize="17sp" />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/blue"
      android:layout_marginTop="33.71dp"
      android:text="Continue"
      android:textSize="17sp"

      android:padding="13dp"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="have an account? Register"

      android:textSize="12sp"
      android:layout_marginTop="17dp"
      android:textAlignment="center"

      />




</LinearLayout>